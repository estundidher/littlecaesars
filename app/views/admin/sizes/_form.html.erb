<%= form_for [:admin, @size], html: {:role => 'form', :style => 'width:500px;'} do |f| %>

  <%= tb_show_errors_for @size %>

  <div class="form-group <%= tb_has_error @size, :name %>">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error @size, :description %>">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <%= tb_submit @size %>
  <%= tb_button_back admin_sizes_path %>
<% end %>