<%= form_for [:admin, @user], html: {multipart:true, role:'form', style:'width:500px;'} do |f| %>

  <%= tb_show_errors_for @user %>

  <div class="checkbox <%= tb_has_error @user, :admin %>">
    <%= f.label :admin do %>
      <%= f.check_box :admin %> <%= User.human_attribute_name 'admin' %>
    <% end %>
  </div>

  <div class="form-group <%= tb_has_error @user, :username %>">
    <%= f.label :username %>
    <%= f.text_field :username, class:'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error @user, :email %>">
    <%= f.label :email %>
    <%= f.text_field :email, class:'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error @user, :password %>">
    <%= f.label :password %>
    <%= f.password_field :password, class:'form-control', placeholder:"leave blank if you don't want to change it" %>
  </div>

  <div class="form-group <%= tb_has_error @user, :password_confirmation %>">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class:'form-control', placeholder:"leave blank if you don't want to change it" %>
  </div>

  <%= tb_submit @user %>
  <%= tb_button_back admin_users_path %>
<% end %>