<%= form_for [:admin, @place], html: {multipart:true, role:'form', style:'width:500px;'} do |f| %>

  <%= tb_show_errors_for @place %>

  <div class="form-group <%= tb_has_error @place, :photo %>">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>

  <div class="form-group <%= tb_has_error @place, :name %>">
    <%= f.label :name %>
    <%= f.text_field :name, class:'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error @place, :code %>">
    <%= f.label :code %>
    <%= f.text_field :code, maxlength:3, class:'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error @place, :address %>">
    <%= f.label :address %>
    <%= f.text_field :address, class:'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error @place, :phone %>">
    <%= f.label :phone %>
    <%= f.text_field :phone, class:'form-control phone' %>
  </div>

  <div class="form-group <%= tb_has_error @place, :description %>">
    <%= f.label :description %>
    <%= f.text_area :description, class:'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error @place, :map %>">
    <%= f.label :map %>
    <%= f.text_field :map, class:'form-control' %>
  </div>

  <%= tb_submit @place %>
  <%= tb_button_back admin_places_path %>
<% end %>