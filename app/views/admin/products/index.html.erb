<%= tb_breadcrumb Product.model_name.human.pluralize %>
<%= form_for @product, url:admin_products_path, method: 'get', role: 'form' do |f| %>
  <div class="row">
    <div class="col-md-2 col-sm-2">
      <div class="form-group">
        <%= f.label :name, Product.human_attribute_name('name') %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Product Name' %>
      </div>
    </div>
    <div class="col-md-2 col-sm-2">
      <div class="form-group">
        <%= f.label :produt_type_id, Product.human_attribute_name('type') %>
        <%= f.collection_select :product_type_id,
                                ProductType.order(:name), :id, :name,
                                {include_blank: t('helpers.select.all')},
                                {class: 'form-control'} %>
      </div>
    </div>
    <div class="col-md-2 col-sm-2">
      <div class="form-group">
        <%= f.label :category_id, Product.human_attribute_name('category') %>
        <%= f.collection_select :category_id,
                                Category.order(:name), :id, :name,
                                {include_blank: t('helpers.select.all')},
                                {class: 'form-control'} %>
      </div>
    </div>
  </div>
<%= tb_submit_search %>
<% end %>
<br /><br />
<%= render partial: 'list' %>
<%= tb_button_new new_admin_product_path, t('links.new', model: Product.model_name.human) %>