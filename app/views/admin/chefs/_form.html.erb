<%= form_for [:admin, @chef], html: {multipart:true, role:'form', style:'width:500px;'} do |f| %>

  <%= tb_show_errors_for @chef %>

  <div class="form-group <%= tb_has_error @chef, :avatar %>">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <div class="form-group <%= tb_has_error @chef, :background %>">
    <%= f.label :background %>
    <%= f.file_field :background %>
  </div>

  <div class="form-group <%= tb_has_error @chef, :name %>">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error @chef, :position %>">
    <%= f.label :position %>
    <%= f.text_field :position, class: 'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error @chef, :facebook %>">
    <%= f.label :facebook %>
    <%= f.text_field :facebook, class: 'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error @chef, :twitter %>">
    <%= f.label :twitter %>
    <%= f.text_field :twitter, class: 'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error @chef, :plus %>">
    <%= f.label :plus %>
    <%= f.text_field :plus, class: 'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error @chef, :pinterest %>">
    <%= f.label :pinterest %>
    <%= f.text_field :pinterest, class: 'form-control' %>
  </div>

  <%= tb_submit @chef %>
  <%= tb_button_back admin_chefs_path %>
<% end %>