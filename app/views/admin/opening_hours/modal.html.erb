<div id="opening_hour_modal" class="modal fade" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">
          <%= t("titles.#{@opening_hour.id ? 'edit' : 'add'}", model_name: OpeningHour.model_name.human) %>
        </h4>
      </div>
      <div class="modal-body">
        <%= render 'form', opening_hour:@opening_hour %>
      </div>
      <div class="modal-footer">
        <a href="JavaScript:void(0);" class="btn btn-default add-shift" role="button">
          <%= t('links.add', model_name:Shift.model_name.human) %>
          <i class='glyphicon glyphicon-time'></i>
        </a>
        <button type="button" class="btn btn-warning" data-dismiss="modal">
          <i class='glyphicon glyphicon-ban-circle'></i>
          <%= t '.links.close' %>
        </button>
        <button type="button" class="btn btn-primary">
          <i class='glyphicon glyphicon-ok-circle'></i>
          <%= t '.links.save' %>
        </button>
      </div>
    </div>
  </div>
</div>