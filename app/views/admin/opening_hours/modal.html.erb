<div id="opening_hour_modal" class="modal fade" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">
          <%= t("titles.#{@opening_hour.id ? 'edit' : 'add'}", model_name: OpeningHour.model_name.human) %>
        </h4>
      </div>
      <div id="opening_hour_modal_form_container" class="modal-body">
        <%= render 'form', opening_hour:@opening_hour %>
      </div>
      <div class="modal-footer">
        <%= link_to "<i class='glyphicon glyphicon-time'></i> ".html_safe +
                    t('links.add', model_name:Shift.model_name.human),
                    admin_add_shift_path,
                    :class => 'btn btn-default add_shift',
                    :role=> 'button',
                    remote: true %>
        <button type="button" class="btn btn-warning" data-dismiss="modal">
          <i class='glyphicon glyphicon-ban-circle'></i>
          <%= t '.links.close' %>
        </button>
        <button type="button" class="opening_hour_modal_save btn btn-primary">
          <i class='glyphicon glyphicon-ok-circle'></i>
          <%= t '.links.save' %>
        </button>
      </div>
    </div>
  </div>
</div>