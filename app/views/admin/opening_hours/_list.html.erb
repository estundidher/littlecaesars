<table class="table table-condensed table-bordered table-bordered">
  <thead>
    <tr>
        <th style="width:30px;"> # </th>
        <th> <%= OpeningHour.human_attribute_name "day_of_week" %> </th>
        <th style="width:43px;"></th>
    </tr>
  </thead>
  <tbody>
    <% if place.opening_hours.size > 0 %>
      <%= render place.opening_hours %>
    <% end %>
    <tr>
      <td colspan="4">
        <center>
          <%= link_to t('links.add', model_name:OpeningHour.model_name.human),
                      new_admin_place_opening_hour_path(place),
                      remote: true, class:'add' %>
        </center>
      </td>
    </tr>
  </tbody>
</table>