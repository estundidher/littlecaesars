<!-- Header Start -->
<div class="header">
  <div class="container">

    <!-- Header top area content -->
    <div class="header-top">
      <div class="row">
        <div class="col-md-4 col-sm-4">
          <!-- Header top left content contact -->
          <div class="header-contact">
            <!-- Contact number -->
            <span><i class="fa fa-phone red"></i> 888-888-8888</span>
          </div>
        </div>
        <div class="col-md-6 col-sm-6">
          <% if customer_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_customer.email %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li> <%= link_to 'Sign Out', destroy_customer_session_path, method: :delete %> </li>
                </ul>
              </li>
            </ul>
          <% end %>
        </div>
        <div class="col-md-2 col-sm-2">
          <% if customer_signed_in? %>
            <div id="cart_container">
              <% @cart = Cart.find_or_create_by customer: current_customer, status: Cart.statuses[:open] %>
              <%= render partial: '/cart/top/cart', locals:{cart:@cart} %>
            </div>
          <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li> <%= link_to 'Sign Up', new_customer_registration_path %> </li>
              <li> <%= link_to 'Sign In', new_customer_session_path %> </li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">

      <div class="col-md-4 col-sm-5">
        <!-- Link -->
        <%= link_to root_path do %>
