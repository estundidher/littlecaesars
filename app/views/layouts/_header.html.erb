<!-- Header Start -->
<div class="header">
  <div class="container">
    <!-- Header top area content -->
    <div class="header-top">
      <div class="row">

        <div class="col-md-12 col-sm-12">
          <% if customer_signed_in? %>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_customer.email %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li> <%= link_to 'Sign Out', destroy_customer_session_path, method: :delete %> </li>
                </ul>
              </li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li> <%= link_to 'Sign Up', new_customer_registration_path %> </li>
              <li> <%= link_to 'Sign In', new_customer_session_path %> </li>
            </ul>
          <% end %>
        </div>

      </div>
    </div>

    <div class="row">
      <div class="col-md-3 col-sm-3">
        <!-- Link -->
        <%= link_to root_path do %>
          <!-- Logo area -->
          <div class="logo">
            <%= image_tag "logo.png", class: 'img-responsive' %>
            <!-- Heading
            <h1><%= t 'brand' %></h1>
            Paragraph
            <p>Facility ester expedite instinct.</p>
            -->
          </div>
        <% end %>
      </div>
      <div class="col-md-9 col-sm-9" style="padding-right: 0px;">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-right" role="navigation">
          <div class="container-fluid">

            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span id="menuSpan">MENU</span>
              </button>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1" style="height: auto;">
              <ul class="nav navbar-nav">
                <li>
                  <%= link_to root_path do %>
                    <%= image_tag 'nav-menu/home-icon.png', class:'img-responsive' %> Home
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path do %>
                    <%= image_tag 'nav-menu/about_us.png', class:'img-responsive' %> About Us
                  <% end %>
                </li>
                <li class="dropdown hidden-xs">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <%= image_tag "nav-menu/menu.png", class:'img-responsive' %> Menu
                    <b class="caret"></b>
                  </a>
                  <%= render partial:'layouts/menu_popup' %>
                </li>
                <li class="dropdown visible-xs">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Menu <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <% Category.with_shoppable_products.each do |category| %>
                      <li> <%= link_to category.name, menu_path %> </li>
                    <% end %>
                  </ul>
                </li>
                <!--
                <li>
                  <%= link_to pick_up_index_path do %>
                    <%= image_tag 'nav-menu/shopping_cart.png', class:'img-responsive' %> Order Online
                  <% end %>
                </li>
                -->
                <li>
                  <%= link_to contact_path do %>
                    <%= image_tag 'nav-menu/contac_us_icon.png', class:'img-responsive' %> Contact Us
                  <% end %>
                </li>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>
      </div>
    </div>
  </div> <!-- / .container -->
</div>