                  </ul>
                </li>
                <li>
                  <%= link_to shopping_path do %>
                    <%= image_tag 'nav-menu/nav3.jpg', class: 'img-responsive' %> Shop
                  <% end %>
                </li>
                <li class="dropdown">
                  <%= link_to pick_up_path do %>
                    <%= image_tag "nav-menu/nav5.jpg", class: 'img-responsive' %> Pick up
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path do %>
                    <%= image_tag "nav-menu/nav6.jpg", class: 'img-responsive' %> About
                  <% end %>
                </li>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>
      </div>
    </div>

  </div> <!-- / .container -->
</div>