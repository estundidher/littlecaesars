<%= form_for pick_up, url:{action:'create'}, remote:true do |f| %>

  <%= f.hidden_field :place_id, value:pick_up.place.id %>

  <div class="col-sm-offset-4 col-md-4 col-sm-4">

    <%= tb_show_errors_for pick_up %>

    <div class="form-group dates">
      <label for="product_type">Pick Up Date</label>
      <%= select_tag(:date, options_for_select(dates_available.map {|d| [d.strftime("%A %d %B %Y"), d, {'data-path'=>pick_up_dates_path(pick_up.place, d)}]}), class:'form-control') %>
    </div>

    <div class="form-group">
      <label for="product_type">Pick Up Time</label>
      <i class="fa fa-spinner fa-spin" style="display:none;"></i>
      <div class="times">
        <%= render partial:'/pick_up/dates', locals:{times_available:times_available} %>
      </div>
    </div>
  </div>

  <div class="col-md-offset-4 col-sm-offset-4 col-md-4 col-sm-4">
    <div style="float:left">
      <a class="btn btn-primary btn-lg prev" href="#wizard" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        Back
      </a>
    </div>
    <div style="float:right">
      <%= button_tag type: 'submit', class: 'btn btn-primary btn-lg' do %>
        Start
        <span class="glyphicon glyphicon-chevron-right"></span>
      <% end %>
    </div>
  </div>

<% end %>