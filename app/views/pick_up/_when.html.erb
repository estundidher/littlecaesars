<center><h1>Choose the Date and Time</h1></center>
<br>
<div class="row" style="min-height:420px;">
  <div class="col-md-12 col-sm-12">

    <div class="row checkout">
      <div class="col-md-offset-4 col-sm-offset-4 col-md-4 col-sm-4">
        <div class="sidebar-item">
          <!-- Heading -->
          <h5 class="pull-left"><%= place.name %></h5>
          <!-- Sidebar content icon -->
          <i class="fa fa-truck br-green pull-right"></i>
          <div class="clearfix"></div>
          <!-- Sidebar Paragraph -->
          <p> <%= place.address %> </p>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-offset-4 col-sm-offset-4 col-md-4 col-sm-4">
        <%= form_tag pick_up_when_path(place) do |f| %>
          <div class="form-group dates">
            <label for="product_type">Order Date</label>
            <%= select_tag(:date, options_for_select(place.dates_available.map {|d| [d.strftime("%A %d %B %Y"), d, {'data-path'=>pick_up_times_path(place, d)}] }),
                class:'form-control') %>
          </div>
          <div class="form-group">
            <label for="product_type">Order Time</label>
            <div class="times">
              <%= render partial:'/pick_up/times', locals:{times_available:@place.times_available(Time.now)} %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>