<% if defined?(products) %>
  <% unless products.nil?  %>
    <% products.each do |product| %>
      <div class="addition <%= 'topping' if type == 'toppings' %>" data-id="<%= product.id %>">
        <% if type == 'toppings' %>
          <%= hidden_field_tag 'topping_ids[]', product.id %>
        <% else %>
          <%= hidden_field_tag 'product_ids[]', product.id %>
        <% end %>
        <span class="label label-<%= type == 'toppings' ? 'warning' : 'info' %>" >
          <%= product.name %>
          <i class="glyphicon glyphicon-remove white"></i>
        </span>
      </div>
    <% end %>
  <% end %>
<% end %>