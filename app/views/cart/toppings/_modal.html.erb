<div class="modal fade toppings-modal" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4>Toppings</h4>
      </div>
      <div class="modal-body">
        <div class="single-item">
          <%= render partial:'cart/toppings/available', locals:{all_products:products} %>
          <div class="row">
            <div class="col-md-12 col-sm-12">
              <h4> Toppings added </h4>
              <div class="added">
                <%= render partial:'cart/toppings/added', locals:{products:nil} %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="pull-left">
          <div class="row">
            <div class="col-md-4 col-sm-4 total">
              Total:
            </div>
            <div class="col-md-1 col-sm-1">
              <span class="price">
                <%= render partial:'cart/price', locals:{value:0.0} %>
              </span>
            </div>
          </div>
        </div>
        <button type="button" class="btn btn-warning save">
          <i class='glyphicon glyphicon-shopping-cart'></i>
          <%= t 'links.add_simple' %>
        </button>
      </div>
    </div>
  </div>
</div>