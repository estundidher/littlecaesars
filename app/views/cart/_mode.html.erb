<%= form_tag cart_mode_path, remote: true, class:'mode_chooser_form' do %>
  <%= hidden_field_tag :product_id, product.id, class:'product' if defined?(product) %>
  <%= hidden_field_tag :size_id, 0, class:'size' %>
  <div class="radio-inline">
    <%= label_tag :mode_slider do %>
      <%= radio_button_tag :mode, :slider, true, {class:'mode_chooser slider'} %> 1 Flavour
    <% end %>
  </div>
  <div class="radio-inline">
    <%= label_tag :mode_splitter do %>
      <%= radio_button_tag :mode, :splitter, false, {class:'mode_chooser splitter', disabled:true} %> 2 Flavours
    <% end %>
  </div>
  <%= image_tag 'loader.gif', class:'loader' %>
<% end %>