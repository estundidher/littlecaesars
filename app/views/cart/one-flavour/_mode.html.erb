<div class="col-md-3 col-sm-3 left" style="padding-right: 0px;">
  <%= render partial:'cart/categories', locals: {mode:CartController::CART_MODE[:one_flavour],
                                                 align:'left',
                                                 size:size,
                                                 sizes:sizes,
                                                 categories:categories,
                                                 category:category,
                                                 product:product,
                                                 label:nil} %>
  <div class="details">
    <%= render partial:'/cart/details', locals: {product:product, align:'left', label:nil} %>
  </div>
</div>

<div class="col-md-6 col-sm-6 slider">
  <div class="row">
    <div class="col-md-12 col-md-offset-1 col-sm-12 col-sm-offset-1 left">
      <%= render partial:'cart/carousel', locals:{mode:CartController::CART_MODE[:one_flavour],
                                                 side:'left',
                                                 product:product,
                                                 products:products,
                                                 size:size,
                                                 category:category} %>
    </div>
  </div>
</div>