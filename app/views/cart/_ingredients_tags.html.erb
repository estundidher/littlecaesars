<% if cart_item.instance_of?(CartItemSplittable) %>
  <% cache cache_key_for_product_ingredients(cart_item, product, side) do %>
    <%= render partial:'/cart/tags',
        locals:{cart_item:cart_item, side:side, products:product.items, type:'ingredients'} %>
  <% end %>
<% else %>
  <% cache cache_key_for_product_ingredients(cart_item, product, side) do %>
    <%= render partial:'/cart/tags',
        locals:{cart_item:cart_item, side:side, products:product.items, type:'ingredients'} %>
  <% end %>
<% end %>