<div class="cart-panel">
  <div class="cart-panel-body">
    <ul class="cart-dropdown" role="menu">
      <li>
        <div class="cart-heading">
          <div class="btn-cart-md" data-reload-price-url="<%= cart_price_path %>"> <!-- Button Kart -->
            <a class="cart-link" href="#">
              <%= image_tag "cart.png", class:'img-responsive' %>
              <h4>Shopping Cart</h4>
              <span class="price">
                <%= render partial:'cart/button/price', locals:{cart:@cart} %>
              </span>
              <div class="clearfix"></div>
            </a>
          </div>
        </div>
      </li>
      <li>
        <div class="btn-group" style="width: 100%;">
          <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" style="width: 100%;">
            <i class='glyphicon glyphicon-time'></i>&nbsp;
            <strong><%= @cart.pick_up.place.name %></strong>
            <%= l @cart.pick_up.date, format: :short %>
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li>
                <%= link_to 'Change', pick_up_index_path, class: "link hidden-xs" %>
            </li>
          </ul>
        </div>
      </li>
      <% @cart.items.each do |item| %>
        <%= render partial:'cart/button/item', locals:{cart_item:item} %>
      <% end %>
      <li>
        <!-- Cart items for shopping list -->
        <div class="cart-item">
          <%= link_to checkout_modal_path, remote:true, role:'button',
              class: 'btn btn-danger checkout' do %>
            Checkout
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>