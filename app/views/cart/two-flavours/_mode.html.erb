<div class="col-md-3 col-sm-3 left" style="padding-right: 0px;">
  <%= render partial:'categories', locals: {mode:Cart::MODE[:two_flavours],
                                           align:'left',
                                           size:size,
                                           sizes:sizes,
                                           categories:categories,
                                           category:category,
                                           product:product} %>
  <div class="details">
    <%= render partial:'details', locals: {product:product,
                                          align:'left',
                                          label:'1/2'} %>
  </div>
</div>

<div class="col-md-6 col-sm-6 slider">
  <div class="row">
    <div class="col-md-5 col-md-offset-1 col-sm-5 col-sm-offset-1 left" style="padding-right: 0px;">
      <%= render partial:'cart/carousel', locals:{mode:Cart::MODE[:two_flavours],
                                                   side:'left',
                                                   category:category,
                                                   size:size,
                                                   products:products,
                                                   product:product} %>
    </div>
    <div class="col-md-5 col-sm-5 right" style="padding-left: 0px;">
      <%= render partial:'cart/carousel', locals:{mode:Cart::MODE[:two_flavours],
                                                 side:'right',
                                                 category:category,
                                                 size:size,
                                                 products:products,
                                                 product:product} %>
    </div>
  </div>
</div>

<div class="col-md-3 col-sm-3 right" style="padding-left: 0px;">
  <%= render partial:'categories', locals:{mode:Cart::MODE[:two_flavours],
                                          align:'right',
                                          size:size,
                                          categories:Category.with_shoppable_products(size),
                                          category:category,
                                          product:product} %>
  <div class="details">
    <%= render partial:'details', locals: {product:product,
                                          align:'right',
                                          label:'1/2'} %>
  </div>
</div>