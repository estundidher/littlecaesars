<div class="row">

  <%= render partial:"cart/#{mode}/mode", locals: {categories:categories,
                                                    category:category,
                                                    size:size,
                                                    sizes:sizes,
                                                    product:product,
                                                    products:products} %>
</div>

<div class="row ingredients">

  <%= render partial:'cart/form', locals: {mode:mode,
                                            cart_item:cart_item,
                                            categories:categories,
                                            category:category,
                                            size:size,
                                            sizes:sizes,
                                            product:product,
                                            products:products} %>
</div>

<div class="row toppings">
  <div class="col-md-4 col-sm-4 left" style="padding-right: 0px;">
    <%= render partial:'toppings/add', locals:{cart_item:cart_item, product:product, mode:mode, side:'left'} %>
  </div>
  <div class="col-md-4 col-sm-4" style="padding-right: 0px; padding-left: 40px;">
    <%= link_to shopping_path, class:'btn btn-danger btn-lg' do %>
      <i class="glyphicon glyphicon-chevron-left"></i>
      Back
    <% end %>

    <a href="JavaScript:void(0);" class="btn btn-danger btn-lg add" role="button">
      Add to
      <i class="glyphicon glyphicon-shopping-cart"></i>
      <i class="fa fa-spinner fa-spin" style="display:none;"></i>
    </a>
  </div>
  <% if mode == Cart::MODE[:two_flavours] %>
    <div class="col-md-4 col-sm-4 right" style="padding-left: 0px; text-align: right;">
      <%= render partial:'toppings/add', locals:{cart_item:cart_item, product:product, mode:mode, side:'right'} %>
    </div>
  <% end %>
</div>
<div class="row" style="margin-top:30px; font-size: 11px;">
  <div class="col-md-12 col-sm-12" style="padding-right: 0px;">
    PLEASE NOTE: Over 95% of our products contain gluten. For gluten free choices please select a gluten free base and check for a gluten free toppings product. However, we do not guarantee 100% allergen free environment.
  </div>
</div>
<div class="row" style="margin-top:10px; font-size: 11px;">
  <div class="col-md-3 col-sm-3" style="padding-right: 0px;">
    LC 10’’ = Little Caesar (1-2 serves)
  </div>
  <div class="col-md-3 col-sm-3">
    BC 13’’ = Big Caesar (1-3 serves)
  </div>
  <div class="col-md-6 col-sm-6">
    GF 12’’ = Gluten Free (1-2 serves)
  </div>
</div>
<div class="row" style="margin-top:10px; font-size: 11px;">
  <div class="col-md-3 col-sm-3" style="padding-right: 0px;">
    <%= image_tag 'GlutenFree.png' %>
    Gluten Free Toppings
  </div>
  <div class="col-md-3 col-sm-3">
    <%= image_tag 'Pork.png' %>
    Contains Pork
  </div>
  <div class="col-md-3 col-sm-3">
    <%= image_tag 'Nuts.png' %>
    Contains Nuts
  </div>
  <div class="col-md-3 col-sm-3">
    <%= image_tag 'Egg.png' %>
    Contains Egg
  </div>
</div>