<li>
  <!-- Cart items for shopping list -->
  <div class="cart-item">
    <!-- Item remove icon -->
    <%= link_to cart_remove_item_path(cart_item.id), remote: true,
        method: :delete, data: {confirm: 'Are you sure?'}, class: 'remove' do %>
      <i class="fa fa-times"></i>
    <% end %>
    <!-- Image -->
    <%= image_tag cart_item.photo.url(:medium), class: 'img-responsive img-rounded' %>
    <!-- Title for purchase item -->
    <span class="cart-title">
      <% if cart_item.instance_of?(CartItemSplittable) %>
        <%= render partial:'cart/button/detail', locals:{cart_item:cart_item.highest_half, label: '1/2', size:true} %>
        <br>
        <%= render partial:'cart/button/detail', locals:{cart_item:cart_item.lowest_half, label: '1/2', size:false} %>
      <% else %>
        <%= render partial:'cart/button/detail', locals:{cart_item:cart_item, label: nil, size:true} %>
      <% end %>
    </span>
    <!-- Cart item price -->
    <span class="cart-price pull-right red"> <%= number_to_currency cart_item.total %> </span>
    <div class="clearfix"></div>
  </div>
</li>