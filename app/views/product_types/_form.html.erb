<%= form_for @product_type, html: {multipart: true, role: 'form', style: 'width:500px;'} do |f| %>

  <%= tb_show_errors_for @product_type %>

  <div class="form-group <%= tb_has_error @product_type, :name %>">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="checkbox <%= tb_has_error @product_type, :sizable %>">
    <%= f.label :sizable do %>
      <%= f.check_box :sizable %> <%= ProductType.human_attribute_name 'sizable' %>
    <% end %>
  </div>

  <div class="checkbox <%= tb_has_error @product_type, :allowItems %>">
    <%= f.label :allowItems do %>
      <%= f.check_box :allowItems %> <%= ProductType.human_attribute_name 'allowItems' %>
    <% end %>
  </div>

  <%= tb_submit @product_type %>
  <%= tb_button_back product_types_path %>
<% end %>