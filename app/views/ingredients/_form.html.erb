<%= form_for @ingredient, html: {:multipart => true, :role => 'form', :style => 'width:500px;'} do |f| %>

  <%= tb_show_errors_for @ingredient %>

  <div class="form-group <%= tb_has_error @ingredient, :name %>">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error @ingredient, :price %>">
    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control' %>
  </div>

  <%= tb_submit @ingredient %>
  <%= tb_button_back ingredients_path %>
<% end %>