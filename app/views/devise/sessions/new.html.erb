<h2>Sign in</h2>

<%= form_for resource, as: resource_name, url: session_path(resource_name), html: {role:'form', style:'width: 30%;'} do |f| %>

  <div class="form-group <%= tb_has_error resource, :username %>">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error resource, :password %>">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <%= f.label :remember_me, class: 'checkbox' do %>
      <%= f.check_box :remember_me %>remember me
    <% end %>
  <% end -%>

  <%= tb_submit nil, 'Sign in' %>

<% end %>

<%= render "devise/shared/links" %>