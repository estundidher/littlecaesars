<h2>Sign up</h2>

<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {role:'form', style:'width: 30%;'} do |f| %>

  <%= devise_error_messages! %>

  <div class="form-group <%= tb_has_error resource, :username %>">
    <%= f.label :username %><br />
    <%= f.email_field :username, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error resource, :email %>">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error resource, :password %>">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group <%= tb_has_error resource, :password_confirmation %>">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <%= tb_submit resource %>

<% end %>

<%= render "devise/shared/links" %>