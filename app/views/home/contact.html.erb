<% content_for :banner, 'contact' %>
<% content_for :page_title, 'Contact Us' %>
<% content_for :page_description, 'Contact Us' %>
<% content_for :page_keywords, 'Contact Us' %>

<% content_for :breadcrumb do %>
  <%= tb_breadcrumb 'Contact Us' %>
<% end %>

<div class="contactus">
  <div class="container">
    <div class="row">
      <div class="col-md-6">

        <!-- Contact form -->
        <div class="contact-form">

          <%= tb_show_errors_for @contact, "prohibited this message from being sent:" %>
          <%= render partial: 'layouts/flash_messages', flash: flash %>

          <!-- Heading -->
          <h3>Contact Form</h3>
          <!-- Form -->
          <%= form_for @contact, url: send_message_path do |f| %>
            <div class="form-group <%= tb_has_error @contact, :name %>">
              <%= f.text_field :name, class:'form-control', placeholder:'Name' %>
            </div>
            <div class="form-group <%= tb_has_error @contact, :email %>">
              <%= f.text_field :email, class:'form-control', placeholder:'Email' %>
            </div>
            <div class="form-group <%= tb_has_error @contact, :message %>">
              <%= f.text_area :message, class:'form-control', placeholder:'Message...' %>
            </div>

            <%= recaptcha_tags ajax:true %>

            <!-- Form button -->
            <button class="btn btn-danger btn-sm spinnable" type="submit">
              <i class="glyphicon glyphicon-ok-circle"></i>
              <i class="fa fa-spinner fa-spin" style="display:none;"></i>
              Send
            </button>&nbsp;
            <button class="btn btn-default btn-sm" type="reset">
              Reset
            </button>
          <% end %>
        </div><!--/ Contact form end -->
      </div>

    </div>
  </div>
</div>