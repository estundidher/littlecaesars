<% content_for :banner, 'product' %>
<% content_for :page_title, @product.name %>
<% content_for :page_description, "#{@product.name}: #{@product.items_friendly}" %>
<% content_for :page_keywords, "#{@product.name},#{@product.items_friendly}" %>

<% content_for :breadcrumb do %>
  <%= tb_breadcrumb 'Shopping' %>
<% end %>

<!-- Single Item Start -->
<div class="single-item">
  <div class="container">
    <!-- Shopping single item contents -->
    <div class="single-item-content">
      <div class="row">
        <div class="col-md-4 col-sm-5">
          <!-- Product image -->
          <%= image_tag @product.photo.url(:large), class: 'img-responsive img-thumbnail' %>
        </div>
        <div class="col-md-8 col-sm-7">
          <!-- Heading -->
          <h3><%= @product.name %></h3>
          <div class="row">
            <div class="col-md-7 col-sm-12">
              <!-- Single item details -->
              <div class="item-details">
                <!-- Paragraph -->
                <p class="text-justify"> <%= @product.items_friendly %> </p>
                <div class="row">
                  <% Product.shoppable.each do |product| %>
                    <div class="col-md-3 col-sm-6">
                      <%= link_to product_path(product) do %>
                        <%= image_tag product.photo.url(:large), class: 'dish img-responsive' %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div><!--/ Inner row end  -->
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Single Item End -->