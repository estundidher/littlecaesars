<%= "#{label} " unless label.nil? %><%= order_item.product_name %>
<% if show_size %>
  <br> <small>
    <%= number_to_currency order_item.price %>
    <%= order_item.size_name if order_item.sizable? %>
  </small>
<% end %>
<% if order_item.additionable? %>
  <% if order_item.additions.present? %>
    <% order_item.additions.each do |addition| %>
      <br> <small>
        + <%= addition[0] %>: <%= number_to_currency addition[1] %>
      </small>
    <% end %>
  <% end %>
  <% if order_item.subtractions.present? %>
    <% order_item.subtractions.each do |subtraction| %>
      <br> <small>
        - <%= subtraction[0] %>: <%= number_to_currency subtraction[1] %>
      </small>
    <% end %>
  <% end %>
<% end %>