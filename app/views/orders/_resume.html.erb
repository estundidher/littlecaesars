<!-- Items table -->
<table class="table table-striped table-bordered">
  <tfoot>
    <tr>
      <th style="text-align: center;"> <%= Cart.human_attribute_name 'tax' %> </th>
      <th> <%= number_to_currency @order.tax %> </th>
    </tr>
    <tr>
      <th style="text-align: center;"> <%= Cart.human_attribute_name 'total' %> </th>
      <th> <%= number_to_currency @order.price %> </th>
    </tr>
  </tfoot>
  <tbody>
    <% @order.items.each do |order_item| %>
      <% if order_item.instance_of?(CartItemSplittable) %>
        <%= render 'orders/resume_detail', order_item:order_item.highest_half, label:'1/2', show_size:true %>
        <br><br>
        <%= render 'orders/resume_detail', order_item:order_item.lowest_half, label:'1/2', show_size:false %>
      <% else %>
        <%= render 'orders/resume_detail', order_item:order_item, label:nil, show_size:true %>
      <% end %>
    <% end %>
  </tbody>
</table>