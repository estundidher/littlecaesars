<%= form_for resource, as: resource_name, url: registration_path(resource_name),
    html: {role: 'form', class: 'form-horizontal', style: 'width:500px;'} do |f| %>

  <%= tb_show_errors_for @customer %>

  <div class="form-group <%= tb_has_error @customer, :name %>">
    <%= f.label :name, class:'col-md-2 control-label' %>
    <div class="col-md-8">
      <%= f.text_field :name, class: 'form-control',
          placeholder: Customer.human_attribute_name('name') %>
    </div>
  </div>

  <div class="form-group <%= tb_has_error @customer, :surname %>">
    <%= f.label :surname, class:'col-md-2 control-label' %>
    <div class="col-md-8">
      <%= f.text_field :surname, class: 'form-control',
          placeholder: Customer.human_attribute_name('family_name') %>
    </div>
  </div>

  <div class="form-group <%= tb_has_error @customer, :mobile %>">
    <%= f.label :mobile, class:'col-md-2 control-label' %>
    <div class="col-md-8">
      <%= f.text_field :mobile, class: 'form-control',
          placeholder: Customer.human_attribute_name('mobile') %>
    </div>
  </div>

    <div class="form-group <%= tb_has_error @customer, :email %>">
      <%= f.label :email, class:'col-md-2 control-label' %>
      <div class="col-md-8">
        <%= f.text_field :email, class: 'form-control',
            placeholder: Customer.human_attribute_name('email') %>
      </div>
    </div>

    <div class="form-group <%= tb_has_error @customer, :password %>">
      <%= f.label :password, class:'col-md-2 control-label'  %>
      <div class="col-md-8">
        <%= f.password_field :password,
                             autocomplete: "off",
                             class: 'form-control',
                             placeholder: Customer.human_attribute_name('password') %>
      </div>
    </div>

    <div class="form-group <%= tb_has_error @customer, :password_confirmation %>">
      <%= f.label :confirm, class:'col-md-2 control-label'  %>
      <div class="col-md-8">
        <%= f.password_field :password_confirmation,
                             autocomplete: "off",
                             class: 'form-control',
                             placeholder: "#{Customer.human_attribute_name('confirm')} #{Customer.human_attribute_name('password')}" %>
      </div>
    </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-8">
      <%= tb_submit @customer, nil, 'btn btn-danger btn-sm' %>
      <%= tb_button_back root_path %>
    </div>
  </div>

<% end %>