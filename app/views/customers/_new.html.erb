<div class="sign-in container padd">
  <%= render partial: 'layouts/flash_messages', flash: flash %>
  <%= tb_show_errors_for @customer %>
  <div class="row">
  	
  	<% if controller_name == 'sessions' %>
	    <div class="col-md-6 col-sm-6">
	      <h4 class="title">Sign In</h4>
	      <%= render '/customers/sessions/form' %>
	    </div>
    <% end %>
    
    <% if controller_name == 'registrations' %>
	    <div id="customerSignUpDiv" class="col-md-6 col-sm-6">
	      <h4 class="title">Sign Up</h4>
	      <%= render '/customers/registrations/form' %>
	    </div>
	<% end %>
  </div>
</div>