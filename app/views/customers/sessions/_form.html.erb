<%= form_for resource, as: resource_name, url: session_path(resource_name),
    html: {role: 'form', class: 'form-horizontal', style: 'width:500px;'} do |f| %>

  <div class="form-group">
    <%= f.label :email, class:'col-md-2 control-label' %>
    <div class="col-md-8">
      <%= f.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class:'col-md-2 control-label'  %>
    <div class="col-md-8">
      <%= f.password_field :password,
                           autocomplete: "off",
                           class: 'form-control',
                           placeholder: 'Password' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-6">
      <div class="checkbox>">
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        <% end %>
      </div>
    </div>
    <div>
      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-8">
      <%= f.submit "Sign in", class: 'btn btn-danger btn-sm' %>
      <%= tb_button_back root_path %>
    </div>
  </div>

<% end %>